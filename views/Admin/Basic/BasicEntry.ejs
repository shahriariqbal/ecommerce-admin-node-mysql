<% include ./../../layout/Adminheader.ejs %>
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
       Basic Information
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-gear"></i> Basic</a></li>
        <li><a href="#">Basic List</a></li>
        
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title"><%=content%></h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
        
          <form action="/Admin/basic/BasicEntry"   method="post" enctype="multipart/form-data">
            
            <div id="msg"></div>
            <div class="form-horizontal">
        
                
               
                <div class="form-group">
                    <label class="control-label col-md-2" for="Group">Group</label>
                    <div class="col-md-10">
                        <select class="form-control" data-val="true" data-val-number="The field gid must be a number." id="gid" name="gid"><option value="">--Select--</option>
                          <%for(var i=0; i< data.length; i++){%>
                          <option value="<%= data[i]['gid'] %>"><%= data[i]['gtext'] %></option>

                          <%}%>
       
        </select>
                        <span class="field-validation-valid text-danger" data-valmsg-for="gid" data-valmsg-replace="true"><%=errorData.gid%></span>
                    </div>
                </div>
        
                <div class="form-group">
                    <label class="control-label col-md-2" for="Title">Title</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="gtext" name="gtext" type="text" value="">
                        <span class="field-validation-valid text-danger" data-valmsg-for="gtext" data-valmsg-replace="true"><%=errorData.gtext%></span>
                    </div>
                </div>
        
        
        
                <div class="form-group">
                    <label class="control-label col-md-2" for="Description">Description</label>
                    <div class="col-md-10">
                        <textarea class="form-control" cols="20" id="text" name="text" rows="2" style="height:200px"></textarea>
                        <span class="field-validation-valid text-danger" data-valmsg-for="text" data-valmsg-replace="true"><%=errorData.text%></span>
                    </div>
                </div>
        
        
                <div class="form-group">
                    <label class="control-label col-md-2" for="Image___jpg_">Image (jpg or png)</label>
                    <div class="col-md-10">
                        <input type="file" name="images">
                   
                    </div>
                </div>
        
        
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default">
                    </div>
                </div>
            </div>
        </form>
        </div>
        <!-- /.box-body -->
        <div class="box-footer text-center">
        
        </div>
        <!-- /.box-footer-->
      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <% include ./../../layout/Adminfooter.ejs %>