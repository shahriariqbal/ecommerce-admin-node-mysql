<% include ./../../layout/Adminheader.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      User Information
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-gear"></i> User</a></li>
      <li><a href="#">User Entry</a></li>

    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title"><%=content%></h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body">

        <form action="/Admin/user/useredit/<%=data[0].Id%>" method="post">

          <div class="form-horizontal">


            <div class="form-group">
              <label class="control-label col-md-2" for="SName">Name</label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="Name" name="Name" type="text"
                  value="<%=data[0].Name%>">
                <span class="field-validation-valid text-danger" data-valmsg-for="Name"
                  data-valmsg-replace="true"><%=errorData.Name%></span>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2" for="Phone">Phone</label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="Phone" name="Phone" type="text"
                  value="<%=data[0].Phone%>">
                <span class="field-validation-valid text-danger" data-valmsg-for="Phone"
                  data-valmsg-replace="true"></span>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2" for="Email">Email</label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="Email" name="Email" type="text"
                  value="<%=data[0].Email%>">
                <span class="field-validation-valid text-danger" data-valmsg-for="Email"
                  data-valmsg-replace="true"><%=errorData.Email%></span>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2" for="Group">Role </label>
              <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-number="The field gid must be a number."
                  id="RoleId" name="RoleId">
                  <!-- <option value="">--Select--</option> -->
                  <%for(var i=0; i< _data.length; i++){
                      str="";
                      if(data[0].RoleId ==_data[i].RoleId)
                      str="selected";
                      %>
                  <option value="<%= _data[i].RoleId %>" <%=str%>><%= _data[i].RoleName %></option>
                  <%}%> 
                  </select>
                  <span class="field-validation-valid text-danger" data-valmsg-for="RoleId" data-valmsg-replace="true"><%=errorData.roleid%></span>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2" for="SName">User ID</label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="Username" name="Username" type="text"
                  value="<%=data[0].Username%>">
                <span class="field-validation-valid text-danger" data-valmsg-for="Cperson"
                  data-valmsg-replace="true"><%=errorData.Username%></span>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2" for="SName">Password</label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="Password" name="Password" type="text"
                  value="<%=data[0].Password%>">
                <span class="field-validation-valid text-danger" data-valmsg-for="Password"
                  data-valmsg-replace="true"><%=errorData.Password%></span>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2" for="SName">Confirm Password</label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="CPassword" name="CPassword" type="text"
                  value="<%=data[0].Password%>">
                <span class="field-validation-valid text-danger" data-valmsg-for="CPassword"
                  data-valmsg-replace="true"><%=errorData.Password%></span>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2" for="Group">Status</label>
              <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-number="The field gid must be a number."
                  id="Status" name="Status">
                  <% if(data[0].Active==true) {%>
                  <option value="1" selected>Active</option> <%} else {%>
                  <option value="1">Active</option>
                  <%}%>

                  <% if(data[0].Active==false) {%> <option value="0" selected>Inactive</option> <%} else {%>
                  <option value="0">Inactive</option>
                  <%}%>                
                </select>
                <span class="field-validation-valid text-danger" data-valmsg-for="Status" data-valmsg-replace="true"></span>
            </div>
          </div>
            <div class="form-group">
              <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success">
              </div>
            </div>         
        </form>
      </div>
      <!-- /.box-body -->
      <div class="box-footer text-center">

      </div>
      <!-- /.box-footer-->
    </div>
    <!-- /.box -->

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<% include ./../../layout/Adminfooter.ejs %>