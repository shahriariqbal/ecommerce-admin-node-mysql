<% include ./../../layout/Adminheader.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Flash Product
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-gear"></i> Product</a></li>
      <li><a href="#">Flash Product List</a></li>

    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title"><%=content%></h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body">
        <div class="">
          <div class="">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Offer Expiry</th>
                  <th>Status</th>
                  <th>Offer Percent(%)</th>
                  <th>Discount</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <%  for(var i = 0;i < data.length;i++) { %>
                <tr>
                  <td><%= data[i].Name  %></td>
                  <td><%= data[i].OfferExpiry.toDateString() %></td>
                  <td><%= data[i].Active =="1" ? "Active" :"Inactive" %></td>
                  <td> <%= data[i].UnitPrice  %></td>
                  <td><%= data[i].Discount  %></td>                  
                  <td><a href="/admin/product/flashDetails/<%=data[i].Id %>">Details</a>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>        
        </html>
        </div>

      </div>
      <!-- /.box-body -->
      <div class="box-footer text-center">
      </div>
      <!-- /.box-footer-->
    </div>
    <!-- /.box -->

  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<% include ./../../layout/Adminfooter.ejs %>

