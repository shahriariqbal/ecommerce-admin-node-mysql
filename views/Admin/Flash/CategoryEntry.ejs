<% include ./../../layout/Adminheader.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Category Information
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-gear"></i> Category</a></li>
      <li><a href="#">Category List</a></li>

    </ol>
  </section>

  <!-- Main content -->
  <section class="content">

    <!-- Default box -->
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title"><%=content%></h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fa fa-minus"></i></button>
          <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fa fa-times"></i></button>
        </div>
      </div>
      <div class="box-body">

        <form action="/Admin/product/CategoryEntry" method="post">

          <div id="msg"></div>
          <div class="form-horizontal">


            <input data-val="true" data-val-number="The field id must be a number."
              data-val-required="The id field is required." id="id" name="id" type="hidden" value="">


            <div class="form-group">
              <label class="control-label col-md-2" for="Title">Category(English)</label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="Category" name="Category" type="text" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="Category"
                  data-valmsg-replace="true"><%=errorData.Category%></span>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-2" for="Title">Category(Bangla)</label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="Category_BN" name="Category_BN" type="text"
                  value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="Category_BN"
                  data-valmsg-replace="true"><%=errorData.Category_BN%></span>
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2" for="Description">Description(English)</label>
              <div class="col-md-10">
                <textarea class="form-control" cols="20" id="Description" name="Description" rows="2"
                  style="height:200px"></textarea>
                <span class="field-validation-valid text-danger" data-valmsg-for="text"
                  data-valmsg-replace="true"><%=errorData.Description%></span>
              </div>
            </div>


            <div class="form-group">
              <label class="control-label col-md-2" for="Description">Description(Bangla)</label>
              <div class="col-md-10">
                <textarea class="form-control" cols="20" id="Description_BN" name="Description_BN" rows="2"
                  style="height:200px"></textarea>
                <span class="field-validation-valid text-danger" data-valmsg-for="text"
                  data-valmsg-replace="true"></span>
              </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2" for="Group">Parent</label>
              <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-number="The field gid must be a number."
                  id="parentid" name="parentid">
                  <option value="">--Select--</option>
                  <%for(var i=0; i< data.length; i++){%>
                  <option value="<%= data[i].PID %>"><%= data[i].PName %></option>

                  <%}%>
   
                    </select>
                    <span class="field-validation-valid text-danger" data-valmsg-for="gid" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
              <label class="control-label col-md-2" for="Description"> Rank </label>
              <div class="col-md-10">
                <input class="form-control text-box single-line" id="rankid" name="rankid" type="number" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="rankid" data-valmsg-replace="true"></span>
         </div>
          </div>

          <div class="form-group">
            <label class="control-label col-md-2" for="Group">Status</label>
            <div class="col-md-10">
                <select class="form-control" data-val="true" data-val-number="The field gid must be a number." id="Status" name="Status">
                  <option value="1">Active</option>
                  <option value="0">Inactive</option>
                </select>
                <span class="field-validation-valid text-danger" data-valmsg-for="gid" data-valmsg-replace="true"></span>
            </div>
        </div>
                <div class="form-group">
                    <label class="control-label col-md-2" for="Image___jpg_">Image (jpg or png)</label>
                    <div class="col-md-10">
                        <input type="file" name="file">                   
                    </div>
                </div>        
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success">
                    </div>
                </div>
            </div>
        </form>
        </div>
        <!-- /.box-body -->
        <div class="box-footer text-center">
        
        </div>
        <!-- /.box-footer-->
      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <% include ./../../layout/Adminfooter.ejs %>