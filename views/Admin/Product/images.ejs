<% include ./../../layout/Adminheader.ejs %>
<!-- page specific plugin styles -->
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title"><%=content%></h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                        <i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip"
                        title="Remove">
                        <i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">
                <% include ./../../layout/flash.ejs %>
                <div class="col-xs-6">
                    <p> Product List <small> </p>
                </div>
                <form id="imageForm" method="post" action="/admin/product/images/<%=id%>" enctype="multipart/form-data">
                    <input style="display:none" type="file" name="images" multiple id="file">
                    <div class="col-xs-6">
                        <a href="#"> <button class="btn btn-info pull-right" id="OpenImgUpload" type="button"> Upload
                                Images </button></a>
                    </div>
                </form>

            </div>

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <div>

                        <ul class="ace-thumbnails clearfix">
                            <% if(data.length > 0){
                                for(var i = 0;i < data.length;i++) { %>
                            <li>
                                <a href="<%=nodeSiteUrl%>/upload/product_images/<%=data[i].image%>" data-rel="colorbox">
                                    <% if(data[0].image){  %>
                                    <img width="150" height="150" alt="150x150"
                                        src="<%=nodeSiteUrl%>/upload/product_images/<%=data[i].image%>" />
                                    <% } %>
                                </a>
                                <div class="tools tools-top">
                                    <a onclick="return confirm('Are you sure you want to set this image as default image ?')"
                                        href="/admin/product/setDefaultImage/<%=data[i].Id%>/<%=data[i].pid%>"
                                        title="Set as default Image">
                                        <i class="ace-icon fa fa-paperclip"></i>
                                    </a>
                                    <a onclick="return confirm('Are you sure you want to delete this ?')"
                                        href="/admin/product/deleteImage/<%=data[i].Id%>">
                                        <i class="ace-icon fa fa-times red"></i>
                                    </a>
                                </div>
                            </li>
                            <% }  
                        }else{ %>
                            <li class="no-image-record"> No record found </li>
                            <% } %>
                        </ul>
                    </div><!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div>



        </div><!-- /.page-content -->
</div>
</div><!-- /.main-content -->
</section>


</div>
<style>
    .ace-thumbnails li {
        float: left;
        display: inline !important;

        padding-left: 10px;
    }
</style>

<% include ./../../layout/Adminfooter.ejs %>

<!-- page specific plugin scripts http://admin.americantmartbd.com:8000/admin/product/images/304-->

<script src="<%=nodeSiteUrl%>/bower_components/jquery/jquery.colorbox.min.js"></script>
<script type="text/javascript">
    jQuery(function ($) {

        $('#OpenImgUpload').click(function () {
            $('#file').trigger('click');
        });
        $('#file').change(function () {
            $('#imageForm').submit();
        });
        var $overflow = '';
        var colorbox_params = {
            rel: 'colorbox',
            reposition: true,
            scalePhotos: true,
            scrolling: false,
            previous: '<i class="ace-icon fa fa-arrow-left"></i>',
            next: '<i class="ace-icon fa fa-arrow-right"></i>',
            close: '&times;',
            current: '{current} of {total}',
            maxWidth: '100%',
            maxHeight: '100%',
            onOpen: function () {
                $overflow = document.body.style.overflow;
                document.body.style.overflow = 'hidden';
            },
            onClosed: function () {
                document.body.style.overflow = $overflow;
            },
            onComplete: function () {
                $.colorbox.resize();
            }
        };

        $('.ace-thumbnails [data-rel="colorbox"]').colorbox(colorbox_params);
        $("#cboxLoadingGraphic").html(
            "<i class='ace-icon fa fa-spinner orange fa-spin'></i>"); //let's add a custom loading icon

        $(document).one('ajaxloadstart.page', function (e) {
            $('#colorbox, #cboxOverlay').remove();
        });
    })
</script>