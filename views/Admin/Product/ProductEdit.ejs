<% include ./../../layout/Adminheader.ejs %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Product Information
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-gear"></i> Product</a></li>
                <li><a href="#">Product Edit</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <%=content%>
                    </h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                            <i class="fa fa-minus"></i></button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip"
                            title="Remove">
                            <i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <form action="/admin/product/ProductEdit/<%=edata[0].Id %>" method="post">
                        <div class="form-horizontal">
                            <!-- <p>Product</p>
                        <div class=""></div> -->
                            <!-- <hr> -->
                            <!-- <div class="">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-lg-4">
                                        
                                    </div>
                                    <div class="col-lg-4">

                                    </div>
                                    <div class="col-lg-4">
                                        
                                    </div>
                                </div>
                            </div>
                        </div> -->

                            <table class="table responsive">
                                <tbody>
                                    <tr>
                                        <td class="col-lg-2">Name(In English)</td>
                                        <td>
                                            <input class="form-control text-box single-line" id="PName" name="PName"
                                                required="required" type="text" value="<%=edata[0].PName%>">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="PName"
                                                data-valmsg-replace="true">
                                                <%=errorData.PName%>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                    </tr>
                                    <tr>
                                        <td>Name(in Bangla)</td>
                                        <td>
                                            <input class="form-control text-box single-line" id="PName" name="PName_BN"
                                                required="required" type="text" value="<%=edata[0].PName_BN%>">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="PName"
                                                data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Brand</td>
                                        <td>
                                            <input class="form-control text-box single-line" id="Brand" name="Brand"
                                                type="text" value="<%=edata[0].Brand%>">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Brand"
                                                data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Brand(in Bangla)</td>
                                        <td>
                                            <input class="form-control text-box single-line" id="Brand_BN"
                                                name="Brand_BN" type="text" value="<%=edata[0].Brand_BN%>">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Brand_BN"
                                                data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>MRP</td>
                                        <td>
                                            <input class="form-control text-box single-line" data-val="true"
                                                data-val-number="The field mrp must be a number." id="MRP" name="MRP"
                                                required="required" type="text" value="<%=edata[0].MRP%>">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="MRP"
                                                data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Discount</td>
                                        <td>
                                            <input class="form-control text-box single-line" data-val="true"
                                                data-val-number="The field discount must be a number." id="Discount"
                                                name="Discount" required="required" type="text"
                                                value="<%=edata[0].Discount%>">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Discount"
                                                data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Price</td>
                                        <td>
                                            <input class="form-control text-box single-line" data-val="true"
                                                data-val-number="The field UnitPrice must be a number." id="UnitPrice"
                                                name="UnitPrice" required="required" type="text"
                                                value="<%=edata[0].UnitPrice%>">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="UnitPrice"
                                                data-valmsg-replace="true">
                                                <%=errorData.UnitPrice%>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Unit Stock</td>
                                        <td>
                                            <input class="form-control text-box single-line" data-val="true"
                                                data-val-number="The field UnitsInStock must be a number."
                                                id="UnitsInStock" name="UnitsInStock" required="required" type="number"
                                                value="<%=edata[0].UnitsInStock%>">
                                            <span class="field-validation-valid text-danger"
                                                data-valmsg-for="UnitsInStock" data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Description (in Bangla)</td>
                                        <td>
                                            <textarea class="form-control" cols="20" id="Description_BN"
                                                name="Description_BN" rows="2"
                                                style="height:150px"><%=edata[0].Description_BN%></textarea>
                                            <span class="field-validation-valid text-danger"
                                                data-valmsg-for="Description" data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Description (in English)</td>
                                        <td>
                                            <textarea class="form-control" cols="20" id="Description" name="Description"
                                                rows="2" style="height:150px"><%=edata[0].Description%></textarea>
                                            <span class="field-validation-valid text-danger"
                                                data-valmsg-for="Description" data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Supplier</td>
                                        <td>
                                            <select class="form-control" data-val="true"
                                                data-val-number="The field sid must be a number." id="SID" name="SID">
                                                <option value="">--Select--</option>
                                                <% for(var i=0; i< sdata.length; i++){ str="" ;
                                                    if(edata[0].SID==sdata[i].Id) str="selected" ; %>
                                                    <option value="<%=sdata[i].Id %>" <%=str%>><%=sdata[i].Name %>
                                                    </option>
                                                    <%}%>
                                            </select>
                                            <span class="field-validation-valid text-danger" data-valmsg-for="sid"
                                                data-valmsg-replace="true">
                                                <%=errorData.SID%>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td> Status </td>
                                        <td>
                                            <select class="form-control" data-val="true"
                                                data-val-number="The field status must be a number." id="Status"
                                                name="Status">
                                                <% if(edata[0].Active==true) {%>
                                                    <option value="1" selected>Active</option>
                                                    <%} else {%>
                                                        <option value="1">Active</option>
                                                        <%}%>
                                                            <% if(edata[0].Active===false) { %>
                                                                <option value="0" selected>Inactive</option>
                                                                <%} else { %>
                                                                    <option value="0">Inactive</option>
                                                                    <%}%>
                                            </select>
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Status"
                                                data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td> Product show in </td>
                                        <td>
                                            <select class="form-control" data-val="true"
                                                data-val-number="The field location must be a number." id="Location"
                                                name="Location">
                                                <% if(edata[0].IsNew==1) {%>
                                                    <option value="1" selected>IsNew</option>
                                                    <%} else {%>
                                                        <option value="1">IsNew</option>
                                                        <%}%>
                                                            <% if(edata[0].IsNew===0) { %>
                                                                <option value="2" selected>Popular</option>
                                                                <%} else { %>
                                                                    <option value="2">Popular</option>
                                                                    <%}%>
                                            </select>
                                            <span class="field-validation-valid text-danger" data-valmsg-for="Status"
                                                data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Category</td>
                                        <td>
                                            <select class="form-control" data-val="true"
                                                data-val-number="The field parent id must be a number." id="ParentId"
                                                name="ParentId">
                                                <option value="">--Select--</option>
                                                <% for(var i=0; i< data.length; i++){ str="" ;
                                                    if(edata[0].ParentId==data[i].Id) str="selected" ; %>
                                                    <option value="<%=data[i].Id %>" <%=str%>><%=data[i].PName %>
                                                    </option>
                                                    <%} %>
                                            </select>
                                            <span class="field-validation-valid text-danger" data-valmsg-for="parentid"
                                                data-valmsg-replace="true">
                                                <%=errorData.ParentId%>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Size</td>
                                        <td>
                                            <input type="checkbox" name="size" value="2">
                                            <label> M</label>
                                            <input type="checkbox" name="size" value="3">
                                            <label>XL</label><br>

                                            <input type="checkbox" name="size" value="4">
                                            <label> XXL </label>
                                            <input type="checkbox" name="size" value="5">
                                            <label>S</label><br>

                                            <input type="checkbox" name="size" value="6">
                                            <label> Age 1-2 years </label>
                                            <input type="checkbox" name="size" value="7">
                                            <label>Age 3-5 years </label><br>

                                            <input type="checkbox" name="size" value="8">
                                            <label> Age 6-8 years </label>
                                            <input type="checkbox" name="size" value="9">
                                            <label>Age 9-12 years</label><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Rank No</td>
                                        <td>
                                            <input class="form-control" data-val="true"
                                                data-val-number="The field rankid must be a number." id="RankId"
                                                name="RankId" type="number" value="<%=edata[0].RankId%>">
                                            <span class="field-validation-valid text-danger" data-valmsg-for="RankId"
                                                data-valmsg-replace="true"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td><input type="submit" value="Save" class="btn btn-success"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">

                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <% include ./../../layout/Adminfooter.ejs %>